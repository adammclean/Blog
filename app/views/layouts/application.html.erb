<!-- There is jquery_ujs preloaded here which allows for HTML5 functionality such as the dropdown 'are you sure you want to delete' menu for our 'destroy' action -->

<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
	<% if current_user  %>
	Logged in as <%= current_user.email %>
	<%= link_to "Log out", log_out_path %>
	<% else  %>
	<%= link_to "Sign up", sign_up_path %> or
	<%= link_to "log in", log_in_path %>
	<% end %>
	

</div>

<%= yield %>

</body>
</html>
