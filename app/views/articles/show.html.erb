<!-- Show the articles - title and text -->

<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>





<!-- Add a comment -->

<h2>Add a comment:</h2>
<%= form_for ([@article, @article.comments.build]) do |f| %>
<p>
	<%= f.label :commenter %>
	<%= f.text_field :commenter %>
</p>

<p>
	<%= f.label :body %>
	<%= f.text_area :body %>
</p>

<p>
	<%= f.submit %>
</p>
<% end %>

<!-- Links to the index and edit -->

<%= link_to 'Back', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %>